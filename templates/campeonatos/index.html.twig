{% extends 'base.html.twig' %}

{% block title %}Listagem de campeonatos - {% endblock %}

{% block body %}
    <h1 class="display-3">Listagem de campeonatos</h1>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Cod.</th>
            <th>Nome</th>
            <th>Organizador</th>
            <th>Ação</th>
        </tr>
        </thead>
        <tbody>
        {% for campeonato in campeonatos %}
        <tr>
            <td>{{ campeonato.id }}</td>
            <td>{{ campeonato.nome }}</td>
            <td>{{ campeonato.organizacao.nome }}</td>
            <td><a href="{{ path('classificacao', {"id": campeonato.id}) }}" class="btn btn-primary">Ver Classificação</a></td>
        </tr>
        {% else %}
            <tr>
                <td colspan="3">Nenhum resultado!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
